#include<iostream>
#include"Caffee.h"

using namespace std;

int main()
{
	Caffee Cappuccino("Cappuccino");
	double ini = Cappuccino.getPrice();
	cout << "只加咖啡时的价格" << ini <<endl;
	Cappuccino.addMilk();
	ini = Cappuccino.getPrice();
	cout << "加牛奶之后的价格" << ini << endl;
	Cappuccino.addSugar();
	ini = Cappuccino.getPrice();
	cout << "加牛奶和糖之后的价格" << ini << endl;

	system("pause");
	return 0;

}
